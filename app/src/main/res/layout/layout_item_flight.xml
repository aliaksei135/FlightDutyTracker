<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    card_view:cardBackgroundColor="@color/about_libraries_card"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:contentPadding="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/departure_code_vh_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical|start"
            android:layout_margin="@dimen/margin_medium"
            android:layout_toLeftOf="@+id/arrow_vh_iv"
            android:layout_toStartOf="@+id/arrow_vh_iv"
            android:gravity="center"
            android:text="DEP" />

        <TextView
            android:id="@+id/date_vh_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical|end"
            android:layout_margin="@dimen/margin_medium"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginStart="@dimen/margin_large"
            android:gravity="center"
            android:text="28/07/16" />

        <TextView
            android:id="@+id/flight_number_vh_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical|start"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:text="FLT NO." />

        <ImageView
            android:id="@+id/arrow_vh_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical|center_horizontal"
            android:src="@drawable/ic_arrow_forward_black" />

        <TextView
            android:id="@+id/arrival_code_vh_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical|end"
            android:layout_margin="@dimen/margin_medium"
            android:layout_toEndOf="@+id/arrow_vh_iv"
            android:layout_toRightOf="@+id/arrow_vh_iv"
            android:gravity="center"
            android:text="ARR" />

    </RelativeLayout>

</android.support.v7.widget.CardView>

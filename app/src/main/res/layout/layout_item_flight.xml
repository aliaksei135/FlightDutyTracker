<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_gravity="center"
    android:layout_margin="4dp"
    card_view:cardBackgroundColor="@color/cardview_light_background"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp"
    card_view:contentPadding="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/flight_number_vh_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical|start"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_toLeftOf="@+id/departure_code_vh_tv"
            android:layout_toStartOf="@+id/departure_code_vh_tv"
            android:foregroundGravity="left"
            android:gravity="left"
            android:text="FLT NO."
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/flight_number" />

        <TextView
            android:id="@+id/departure_code_vh_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical|start"
            android:layout_margin="12dp"
            android:layout_toLeftOf="@+id/arrow_vh_iv"
            android:layout_toStartOf="@+id/arrow_vh_iv"
            android:gravity="right"
            android:text="DEPR"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/date_vh_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical|end"
            android:layout_margin="@dimen/margin_medium"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginStart="@dimen/margin_large"
            android:gravity="center"
            android:text="28/07/16"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <ImageView
            android:id="@+id/arrow_vh_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical|center_horizontal"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:src="@drawable/ic_arrow_forward_black" />

        <TextView
            android:id="@+id/arrival_code_vh_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical|end"
            android:layout_margin="12dp"
            android:layout_toEndOf="@+id/arrow_vh_iv"
            android:layout_toRightOf="@+id/arrow_vh_iv"
            android:gravity="left"
            android:text="ARRV"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
